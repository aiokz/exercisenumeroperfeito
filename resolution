#include <stdio.h>
#include <stdlib.h>
#include <math.h>
int main(){
	int n, i, soma = 0;
	
	printf("Digite um numero: ");
	scanf("%d", &n);
	
	for(i = 1; i <= n / 2; i++){
	    if(n %i == 0);
	    soma += i;
	}
	if(soma == n){
	    printf("%d e um numero perfeito", n);
	} else {
	    printf("%d nao e um numero perfeito", n);   
	}
    return 0;
	}
